@model IEnumerable<WebWarehouse.Models.ItemCategory>


@{
    ViewBag.Title = "Home Page";
}


@if (ViewBag.LoggedInn == true)
{
}
else
{<div class="jumbotron">
        <h1>WebWarehouse</h1>
        <p class="lead">The ultimate place for online shopping</p>
        <p><a href="@Url.Action("Login", "Users")" class="btn btn-primary btn-lg">Logg Inn <i class="fa fa-sign-in"></i></a></p>
    </div>
}
<div class="row">
 @{
     int i = 0;
     foreach (var item in Model)
     {
         if ((i % 3) == 0)
         {
            @:</div><div class="row">
                    }

                    <div class="col-md-4">
                       
                        <div class="well well-sm"><h2>@item.Name</h2><p><a href="@Url.Action("ListByCategory", "Items", new { id = item.ID})">Trykk her</a> for å se varer fra denne kategorien.</p></div>
                    </div>
         i++;
     }
}
</div>
